  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "disable async",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/xpm",
      "args": [
        "run",
        "showConanArgs"
      ],
      "env": {
        "npm_config_loglevel": "verbose",
        "npm_config_conditional_async_disable_async": "true"
      },
      "cwd": "${workspaceFolder}/test/fixtures/conditional-async",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/*.js"
      ]
    }
  ]
}
