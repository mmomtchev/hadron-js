{
  "properties": {
    "scriptInstallWASM": "npx prebuild-install --platform emscripten --arch wasm32 -d {{ properties.verbose }} || npx xpm run make --config wasm"
  },
  "buildConfigurations": {
    "wasm": {
      "inherit": [
        "native"
      ],
      "properties": {
        "buildType": "release",
        "toolchain": "emscripten",
        "platformId": "emscripten-wasm32"
      },
      "actions": {
        "prepare": [
          "{{ properties.commandDependenciesWASM }}",
          "{{ properties.commandPrepareWASM }}"
        ],
        "lock": "{{ properties.commandConanLockWASM }}"
      }
    },
    "wasm-debug": {
      "inherit": [
        "wasm"
      ],
      "properties": {
        "buildType": "debug"
      },
      "actions": {
        "prepare": [
          "{{ properties.commandDependenciesWASM }}",
          "{{ properties.commandPrepareWASM }}"
        ]
      }
    }
  }
}
